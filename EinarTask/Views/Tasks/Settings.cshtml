@{
    Layout = "_LayoutTask";
}

<div class="container settings-container">
    <h2 class="settings-header">Ayarlar</h2>

    <!-- Tema Ayarları -->
    <div class="card settings-card mb-4">
        <div class="card-header">
            <h5 class="mb-0">Tema Ayarları</h5>
        </div>
        <div class="card-body">
            <div class="form-check mb-2">
                <input class="form-check-input" type="radio" name="theme" id="lightMode" checked>
                <label class="form-check-label" for="lightMode">
                    Açık Mod
                </label>
            </div>
           
        </div>
    </div>

    <!-- Hesabını Yönet -->
    <div class="card settings-card">
        <div class="card-header">
            <h5 class="mb-0">Hesabını Yönet</h5>
        </div>
        <div class="card-body d-flex justify-content-between align-items-center">
            <p class="mb-0 text-muted">Profil bilgilerini düzenlemek için buraya tıkla</p>
            <a asp-controller="Tasks" asp-action="EditProfile" class="btn btn-manage">
                Hesabını Yönet <i class="bi bi-arrow-right"></i>
            </a>
        </div>
    </div>
</div>


    <style>
    .settings-container {
        max-width: 800px;
        margin: 50px auto;
        padding: 30px;
        animation: fadeIn 0.8s ease-in-out;
    }

    .settings-header {
        background: var(--primary-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-weight: 700;
        font-size: 2rem;
        text-align: center;
        margin-bottom: 30px;
    }

    .settings-card {
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.05);
        border: none;
    }

        .settings-card .card-header {
            background: var(--primary-gradient);
            color: white;
            border-top-left-radius: 15px;
            border-top-right-radius: 15px;
            font-weight: 600;
        }

    .btn-manage {
        background: var(--primary-gradient);
        color: white;
        border: none;
        border-radius: 10px;
        padding: 8px 16px;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        transition: 0.3s;
    }

        .btn-manage:hover {
            transform: translateX(3px);
            box-shadow: 0 4px 12px rgba(255, 65, 108, 0.3);
            color: white;
        }

    </style>
