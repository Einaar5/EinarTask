@using System.Security.Claims
@model EinarTask.Models.ViewModels.TaskBoardViewModel
@{
    ViewData["Title"] = "Görev Panosu";
    Layout = "_LayoutTask";
}

<div class="container-fluid py-3">
    <div class="mb-3">
        <button class="button-effect active" data-bs-toggle="modal" data-bs-target="#createTaskModal">
            + Yeni Görev Ekle
        </button>

        <button class="button-effect active" data-bs-toggle="modal" data-bs-target="#createNewTaskTypeModal">+ Yeni TaskType Ekle</button>
    </div>

    <div class="row g-3">
        @foreach (var taskType in Model.TaskTypes ?? Enumerable.Empty<EinarTask.Models.TaskType>())
        {
            <div class="col-md-3">
                <div class="column p-3 border rounded bg-light"
                     data-tasktype-id="@taskType.Id"
                     ondragover="allowDrop(event)"
                     ondrop="dropTask(event)">

                    <!-- Kolon Başlığı -->
                    <div class="column-header d-flex justify-content-between align-items-center border-bottom pb-2 mb-3">
                        <h5 class="mb-0">@taskType.Name</h5>
                        <div>
                            <button class="btn btn-sm btn-warning" onclick="editTaskType(@taskType.Id)">Düzenle</button>
                            <button class="btn btn-sm btn-danger" onclick="deleteTaskType(@taskType.Id)">Sil</button>
                        </div>
                    </div>

                    <!-- Task Kartları -->
                    <div class="task-list">
                        @foreach (var task in Model.AllTasks.Where(t => t.TaskTypeId == taskType.Id))
                        {
                            <div class="task-card mb-3 p-3 border rounded shadow-sm bg-white"
                                 draggable="true"
                                 ondragstart="dragTask(event)"
                                 data-task-id="@task.Id">

                                <div class="d-flex justify-content-between align-items-start">
                                    <h6 class="fw-bold mb-1">@task.Title</h6>
                                    <!-- Tutma ikonu -->
                                    <span class="drag-handle text-muted ms-2" style="cursor: grab;">☰</span>
                                </div>

                                <p class="small text-muted mb-1">@task.Description</p>
                                <small class="text-secondary d-block mb-2">
                                    Vade: @(task.DueDate?.ToString("dd MMM yyyy") ?? "Belirtilmedi")
                                </small>

                                <button class="btn btn-sm btn-outline-danger "
                                        onclick="deleteTask(@task.Id)" title="Sil">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>

                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Görev Ekle Modal -->
<div class="modal fade" id="createTaskModal" tabindex="-1" aria-labelledby="createTaskModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="createTaskModalLabel">Yeni Görev Ekle</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="createTaskModalBody">
                @await Html.PartialAsync("_CreateTaskModal", Model.NewTask)
            </div>
        </div>
    </div>
</div>

<!-- Yeni TaskType Modal -->
<div class="modal fade" id="createNewTaskTypeModal" tabindex="-1" aria-labelledby="createNewTaskTypeModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title" id="createNewTaskTypeModalLabel">Yeni TaskType</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="createNewTaskTypeModalBody">
                @await Html.PartialAsync("_CreateNewTaskTypeModal", Model.NewTaskType)
            </div>
        </div>
    </div>
</div>

<!-- TaskType Düzenle Modal -->
<div class="modal fade" id="editTaskTypeModal" tabindex="-1" aria-labelledby="editTaskTypeModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-warning text-white">
                <h5 class="modal-title" id="editTaskTypeModalLabel">TaskType Düzenle</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="editTaskTypeModalBody">
                @await Html.PartialAsync("_EditTaskModal", Model.NewTaskType)
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/js/ApiRequests.js"></script>
<script>
        let draggedEl = null;

    function dragTask(e) {
        draggedEl = e.currentTarget;   // kartı al
        e.dataTransfer.effectAllowed = "move";
        e.dataTransfer.setData("text/plain", draggedEl.dataset.taskId);
    }

    function allowDrop(e) {
        e.preventDefault(); // gerekli
    }

    function dropTask(e) {
        e.preventDefault();
        if (draggedEl) {
            e.currentTarget.appendChild(draggedEl); // kartı taşı
            draggedEl = null;
        }
    }

</script>
