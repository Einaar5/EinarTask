@model EditProfileViewModel
@{
    Layout = "_LayoutTask";
}
<div class="container">
    <div class="profile-container">
        <h2 class="header">Profil</h2>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger" role="alert">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <p>@error.ErrorMessage</p>
                }
            </div>
        }

        <form asp-action="EditProfile" method="post" enctype="multipart/form-data">

            <div class="row mb-3">
                <div class="offset-sm-4 col-sm-8">
                    <img src="/assets/userImage/@ViewBag.UserImage" width="150" />
                </div>
            </div>


            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Resim</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="UserImage" type="file" />
                    <span asp-validation-for="UserImage" class="text-danger"></span> <!--Validation Hatası Olursa Burada Gösterilecektir.-->
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="FirstName" class="col-sm-4 col-form-label">Ad</label>
                <div class="col-sm-8">
                    <input asp-for="FirstName" class="form-control" placeholder="Adınızı giriniz" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="LastName" class="col-sm-4 col-form-label">Soyad</label>
                <div class="col-sm-8">
                    <input asp-for="LastName" class="form-control" placeholder="Soyadınızı giriniz" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="Email" class="col-sm-4 col-form-label">Email</label>
                <div class="col-sm-8">
                    <input asp-for="Email" class="form-control" placeholder="Email adresinizi giriniz" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="PhoneNumber" class="col-sm-4 col-form-label">Telefon</label>
                <div class="col-sm-8">
                    <input asp-for="PhoneNumber" class="form-control" placeholder="Telefon numaranızı giriniz" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-tomatored">Kaydet</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-tomatored" asp-controller="Tasks" asp-action="Index" role="button">İptal</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
}
<style>
    .profile-container {
        max-width: 600px;
        margin: 50px auto;
        padding: 30px;
        background-color: #fff;
        border-radius: 15px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    .btn-tomatored {
        background-color: #ff6347;
        border-color: #ff6347;
        color: white;
    }

        .btn-tomatored:hover {
            background-color: #e5533d;
            border-color: #e5533d;
        }

    .btn-outline-tomatored {
        border-color: #ff6347;
        color: #ff6347;
    }

        .btn-outline-tomatored:hover {
            background-color: #ff6347;
            color: white;
        }

    .form-label {
        font-weight: 500;
        color: #333;
    }

    .form-control:focus {
        border-color: #ff6347;
        box-shadow: 0 0 0 0.2rem rgba(255, 99, 71, 0.25);
    }

    .header {
        color: #ff6347;
        font-weight: 700;
        text-align: center;
        margin-bottom: 30px;
    }

    .alert {
        border-radius: 10px;
    }
</style>