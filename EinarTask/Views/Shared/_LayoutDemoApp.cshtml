@{
    //.NET
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <!-- Font Awesome 6.6.0 (en güncel sürüm) -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/loading.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/taskCss.css" />

    <style>
        .user-dropdown .user-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: var(--primary-gradient);
            color: white;
            font-weight: bold;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1rem;
        }

        .user-dropdown .dropdown-toggle {
            display: flex;
            align-items: center;
            gap: 0.5rem; /* Avatar ile isim arasına boşluk */
            text-decoration: none;
            color: #000;
        }

            .user-dropdown .dropdown-toggle:hover {
                text-decoration: none;
            }

        /* -------- Dark Vars -------- */
        [data-theme="dark"] {
            --primary: #ff6347;
            --primary-700: #d64531;
            --primary-gradient: linear-gradient(90deg, #ff6347 0%, #d64531 100%);
            --bg: #181a1b; /* sayfa arka planı */
            --surface: #202325; /* sidebar / navbar */
            --card-bg: #2a2d30; /* kart arka planı */
            --text: #f1f1f1;
            --muted: #a8b0b8;
            --border: rgba(255,255,255,0.08);
            --shadow: 0 4px 18px rgba(0,0,0,0.5);
        }

        /* -------- Uygulama -------- */
        body, .main-content, .sidebar {
            background: var(--bg);
            color: var(--text);
            transition: background .2s ease, color .2s ease;
        }

        /* Sidebar */
        .sidebar {
            background: var(--surface);
        }

            .sidebar .nav-link {
                color: var(--text);
                border-radius: 8px;
                margin: 2px 8px;
            }

                .sidebar .nav-link.active,
                .sidebar .nav-link:hover {
                    background: var(--primary-gradient);
                    color: #fff;
                }

        /* Navbar */
        .top-navbar {
            background: var(--surface);
            padding: 8px 16px;
            border-bottom: 1px solid var(--border);
            display: flex;
            align-items: center;
        }

        /* Dropdown */
        .user-dropdown .dropdown-menu {
            background: var(--card-bg);
            color: var(--text);
            border: 1px solid var(--border);
        }

        .user-dropdown .dropdown-item {
            color: var(--text);
        }

            .user-dropdown .dropdown-item:hover {
                background: var(--primary-gradient);
                color: #fff;
            }

        /* Kartlar */
        .card {
            background: var(--card-bg) !important;
            color: var(--text) !important;
            border: 1px solid var(--border);
            box-shadow: var(--shadow);
        }

        /* Yazılar */
        h1, h2, h3, h4, h5 {
            color: var(--text);
        }

        .text-muted {
            color: var(--muted) !important;
        }

    </style>


</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <div class="sidebar-header">
            <span>EinarTask</span>
        </div>
        <div class="sidebar-menu d-flex flex-column vh-100">
            <ul class="nav flex-column flex-grow-1">
                <li class="nav-item">
                    <a class="nav-link @(currentController == "Tasks" && currentAction == "Index" ? "active" : "")"
                       href="@Url.Action("DemoApp", "Home")">
                        <i class="bi bi-house-door"></i> Anasayfa
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link @(currentController == "Tasks" && currentAction == "EditProfile" ? "active" : "")"
                       href="@Url.Action("DemoAppGoToLogin", "Home")">
                        <i class="bi bi-person"></i> Profil
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("DemoAppGoToLogin", "Home")">
                        <i class="bi bi-gear me-2"></i> Ayarlar
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="https://github.com/Einaar5" target="_blank">
                        <i class="bi bi-code-slash"></i> Geliştirici
                    </a>
                </li>

                <!-- Çıkış butonu -->
                <li class="nav-item mt-auto">
                    <a href="@Url.Action("Index", "Home")" class="dropdown-item"><i class="bi bi-box-arrow-right me-2"></i>Çıkış Yap</a>
                </li>
            </ul>
        </div>

    </div>

    <!-- Main content -->
    <div class="main-content d-flex flex-column min-vh-100">
        <!-- Top Navbar -->
        <nav class="top-navbar">
            <button class="btn btn-sm btn-outline-dark mobile-menu-btn">
                <i class="bi bi-list"></i>
            </button>
            <div class="user-dropdown dropdown ms-auto">
                <a class="dropdown-toggle d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown">
                    <div class="user-avatar d-flex align-items-center justify-content-center">
                        
                        DU
                        
                    </div>

                    <span class="ms-2">User</span>
                </a>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li><a class="dropdown-item" href="@Url.Action("DemoAppGoToLogin", "Home")"><i class="bi bi-person me-2"></i>Profil</a></li>
                    <li><a class="dropdown-item" href="@Url.Action("DemoAppGoToLogin", "Home")"><i class="bi bi-gear me-2"></i>Ayarlar</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li>

                        <a href="@Url.Action("Index", "Home")" class="dropdown-item"><i class="bi bi-box-arrow-right me-2"></i>Çıkış Yap</a>
                        
                    </li>
                </ul>
            </div>

        </nav>
        <!-- 🔹 Yükleme animasyonu -->
        <div id="loader">
            <img src="@(Url.Content("~/assets/img/LoadingLogo.png"))" alt="Logo" class="loader-logo" />
        </div>
        <!-- Main Body -->
        <div class="container-fluid flex-grow-1 p-4">
            @RenderBody()
        </div>

        <!-- Footer -->
        <footer class="footer mt-auto">
            &copy; 2025 - EinarTask - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </footer>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.querySelector('.mobile-menu-btn').addEventListener('click', function () {
            document.querySelector('.sidebar').classList.toggle('active');
        });
    </script>
    <!-- JS: Radyo ile tema değişimi (settings.cshtml'in altına ekle) -->
    <script>
        (function(){
          const lightRadio = document.getElementById('lightMode');
          const darkRadio = document.getElementById('darkMode');
          const root = document.documentElement;

          // Başlangıçta seçili olanı uygula
          function applyThemeFromRadios() {
            if (darkRadio && darkRadio.checked) {
              document.documentElement.setAttribute('data-theme', 'dark');
            } else {
              document.documentElement.removeAttribute('data-theme');
            }
          }

          // event listener
          [lightRadio, darkRadio].forEach(r => {
            if (!r) return;
            r.addEventListener('change', applyThemeFromRadios);
          });

          // İlk uygulama
          applyThemeFromRadios();

          // İsteğe bağlı: kullanıcının tercihini localStorage'da tutma
          [lightRadio, darkRadio].forEach(r => {
            if (!r) return;
            r.addEventListener('change', () => {
              if (darkRadio.checked) localStorage.setItem('site-theme','dark');
              else localStorage.removeItem('site-theme');
            });
          });

          // Sayfa yüklendiğinde localStorage kontrolü (varsa override)
          document.addEventListener('DOMContentLoaded', () => {
            const saved = localStorage.getItem('site-theme');
            if (saved === 'dark') {
              if (darkRadio) darkRadio.checked = true;
              applyThemeFromRadios();
            }
          });
        })();
    </script>

    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>
