@model EinarTask.Models.RegisterViewModel
@{
    ViewData["Title"] = "Kayıt Ol";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | EinarTask</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>

        
        /* === Arka Plan === */
        body {
            height: 100vh;
            margin: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Inter', 'Segoe UI', sans-serif;
            background: linear-gradient(-45deg, #fff5f5, #fff0eb, #ffe8f0, #fff9f6);
            background-size: 400% 400%;
            animation: gradientShift 15s ease infinite;
        }

        @@keyframes gradientShift {
            0%

        {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }

        100% {
            background-position: 0% 50%;
        }

        }

        /* === Form Kutusu === */
        .register-card {
            width: 100%;
            max-width: 460px;
            background: #ffffffcc;
            backdrop-filter: blur(10px);
            border-radius: 20px;
            padding: 40px 35px;
            box-shadow: 0 12px 35px rgba(255, 107, 107, 0.15);
            transition: all 0.3s ease;
        }

            .register-card:hover {
                transform: translateY(-4px);
                box-shadow: 0 16px 45px rgba(255, 107, 107, 0.25);
            }

        /* === Logo ve Başlık === */
        .brand {
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 25px;
            gap: 10px;
        }

        .brand-logo {
            width: 48px;
            height: 48px;
            border-radius: 12px;
            background: linear-gradient(135deg, #ff6b6b, #ff8e53);
            display: flex;
            align-items: center;
            justify-content: center;
            color: #fff;
            font-weight: 700;
            font-size: 1.2rem;
            box-shadow: 0 3px 10px rgba(255, 107, 107, 0.3);
        }

        .brand-text {
            font-weight: 700;
            font-size: 1.25rem;
            color: #2b2b2b;
        }

        .brand-sub {
            font-size: 0.85rem;
            color: #9e9e9e;
        }

        h2 {
            text-align: center;
            font-weight: 700;
            font-size: 1.4rem;
            background: linear-gradient(90deg, #ff6b6b, #ff8e53, #ffc3a0);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 25px;
        }

        /* === Inputlar === */
        .form-control {
            border-radius: 12px;
            border: 1.5px solid #e7e7e7;
            padding: 10px 14px;
            transition: all 0.3s ease;
        }

            .form-control:focus {
                border-color: #ff6b6b;
                box-shadow: 0 0 8px rgba(255, 107, 107, 0.25);
            }

        /* === Buton === */
        .btn-register {
            background: #fff;
            color: #ff6b6b;
            font-weight: 600;
            border: none;
            border-radius: 12px;
            padding: 10px;
            transition: all 0.3s ease;
            box-shadow: 0 4px 12px rgba(255, 107, 107, 0.15);
        }

            .btn-register:hover {
                background: linear-gradient(90deg, #ff6b6b, #ff8e53, #ffc3a0);
                color: #fff;
                transform: translateY(-2px);
                box-shadow: 0 6px 18px rgba(255, 107, 107, 0.25);
            }

        .validation-summary-errors {
            color: #dc3545;
            margin-bottom: 10px;
            font-size: 0.9rem;
        }

        /* === Alt Link === */
        .login-link {
            text-align: center;
            margin-top: 15px;
        }

            .login-link a {
                color: #ff6b6b;
                font-weight: 500;
                text-decoration: none;
            }

                .login-link a:hover {
                    text-decoration: underline;
                }

        /* === Responsive === */
        @@media (max-width: 576px) {
            .register-card

        {
            padding: 30px 20px;
        }

        }
    </style>
</head>

<body>
   
    <div class="register-card">
        <div class="brand">
            <div class="brand-logo">ET</div>
            <div>
                <div class="brand-text">EinarTask</div>
                <div class="brand-sub">Modern Task Manager</div>
            </div>
        </div>

        <h2>Yeni Hesap Oluştur</h2>

        <form asp-action="Register" method="post">
            <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

            <div class="mb-3">
                <label asp-for="FirstName" class="form-label">Ad</label>
                <input asp-for="FirstName" class="form-control" required />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="LastName" class="form-label">Soyad</label>
                <input asp-for="LastName" class="form-control" required />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">Şifre</label>
                <input asp-for="Password" type="password" class="form-control" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label">Şifreyi Onayla</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" required />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-register w-100">Kayıt Ol</button>

            <div class="login-link">
                <a asp-action="Login">Zaten hesabın var mı? Giriş Yap</a>
            </div>
        </form>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
